# Form Context Collector - Agent Mode Configuration
# Скопируйте этот файл в .env и заполните своими значениями

# ============================================================
# 1C:Enterprise Platform
# ============================================================

# Путь к исполняемому файлу 1cv8.exe
# Windows: C:\Program Files\1cv8\8.3.24.1467\bin\1cv8.exe
# Если 1cv8.exe в PATH, можно оставить просто "1cv8.exe"
V8_PATH=1cv8.exe

# ============================================================
# Подключение к информационной базе
# ============================================================

# Вариант 1: Путь к файловой базе
INFOBASE_PATH=C:/Bases/Test

# Вариант 2: Имя базы из списка (альтернатива INFOBASE_PATH)
# INFOBASE_NAME=MyBase

# ============================================================
# Учетные данные 1С
# ============================================================

# Имя пользователя (необязательно, если база без пароля)
USERNAME_1C=

# Пароль (необязательно, если база без пароля)
PASSWORD_1C=

# ============================================================
# Настройки сбора контекста (для Python CLI)
# ============================================================

# Включать невидимые элементы (true/false)
INCLUDE_INVISIBLE=false

# Генерировать Markdown (true/false)
GENERATE_MARKDOWN=true

# Закрывать 1С после завершения (true/false)
CLOSE_AFTER_COLLECTION=true

# Таймаут ожидания в секундах
TIMEOUT=300

# Режим отладки (true/false)
DEBUG_MODE=false

# ============================================================
# Для partial-load-config (опционально)
# ============================================================

# UPDATE_DB=true
# RUN_ENTERPRISE=false
# NAVIGATION_LINK=
# EXTERNAL_DATA_PROCESSOR=
# CONFIG_DIR=config
# CONFIG_FORMAT=Hierarchical
